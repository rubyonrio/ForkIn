<% @items.each do |item| %>
<div id="items"><%= item.done %> <%= item.name %></div>

<table>
<tr>
    <td><%= link_to 'Show', item %></td>
    <td><%= link_to 'Edit', edit_item_path(item) %></td>
    <td><%= link_to 'Destroy', item, :confirm => 'Are you sure?', :method => :delete, :remote => true %></td>
  </tr>
  </table>
<% end %>
